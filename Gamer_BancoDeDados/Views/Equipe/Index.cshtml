@model Equipe

<link rel="stylesheet" href="~/css/equipes.css">
<link rel="stylesheet" href="~/css/Header-Footer.css">

@{
    ViewData["Title"] = "Equipe";
}

@if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}

<!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">
            
            
            <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data"  class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                
                <input class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" name="Nome">
                <label class="foto" for="foto-file">
                    Nenhuma imagem selecionada...
                    <input  type="file" id="foto-file" name="Imagem">
                </label>
                
                <button>Cadastro</button>
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Foto</th>
                        <th>Excluir</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                   @* viewbag Ã© um objeto da classe equipe *@
            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td>
                        <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px">
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">
                            <img src="~/assets/trash.png" alt="">
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">
                            <img src="~/assets/editar.png" class="yellow" alt="">
                        </a>
                    </td>
                </tr>
            }
                </tbody>
            </table>
        </section>
    </main>
   


